= simple_form_for @event do |f|
  = f.input :content
  = f.input :start_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 1,
                              order: [:day, :month, :year]
  = f.input :end_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 1,
                              order: [:day, :month, :year]
  = f.input :place
  = f.button :submit