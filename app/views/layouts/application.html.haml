%html
  %head
    - tag 'meta', {:content => "width=device-width, initial-scale=1.0, shrink-to-fit=no", :name => "viewport"}, true
    %title CompanyName | Event Management System
    = csrf_meta_tags
    = csp_meta_tag
    
    = stylesheet_link_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css",
      integrity: "sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO",
      crossorigin: "anonymous"
    = stylesheet_link_tag    'application', media: 'all',
      'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag "https://use.fontawesome.com/releases/v5.4.1/css/all.css",
      integrity: "sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz",
      crossorigin: "anonymous"
  
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.sticky-top
      = link_to root_path do
        %i.fas.fa-chart-bar
        .navbar-brand CompanyName
      %button{:class => "navbar-toggler", :type => "button",
              :data-toggle => "collapse", :data-target => "#navbarSupportedContent",
              :aria-controls => "navbarSupportedContent", :aria-expanded => "false",
              :aria-label => "Toggle navigation"}
        %span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarSupportedContent
        -# mr-auto -- items on the left, ml-auto -- items on the right
        %ul.navbar-nav.ml-auto
          %li.nav-item
            = link_to root_path do
              .nav-link About
          %li.nav-item
            = link_to new_user_session_path do
              .nav-link Sign in
          %li.nav-item
            = link_to new_event_path do
              .nav-link Create an Event
    - if flash[:notice]
      %p= flash[:notice]
    - if flash[:alert]
      %p= flash[:alert]
    = yield